var vm = new Vue({
	el:'#dpLTE',
	data: {
		proGroup: {
			groupId: 0
		}
	},
	methods : {
		acceptClick: function() {
			if (!$('#form').Validform()) {
		        return false;
		    }
		   ({
		    	url: '../../kdecm/group/save?_' + $.now(),
		    	param: vm.proGroup,
		    	success: function(data) {
		    		$.currentIframe().vm.load();
		    	}
		    });
		}
	}
})
