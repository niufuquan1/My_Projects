<mapper namespace="net.chenlin.dp.modules.kdecm.dao.ProGroupMapper">
	
	<select id="listForPage" resultType="net.chenlin.dp.modules.kdecm.entity.ProGroupEntity">
		SELECT
			`GROUP_ID`, 
			`GROUP_NAME`, 
			`USER_ID`,
			`IFOpenNess`
		FROM
			pro_group
		<!-- WHERE
			USER_ID = #{userid} -->
		WHERE
			group_id = #{
		ORDER BY
			GROUP_ID ASC
	</select>
	
	<insert id="save">
		INSERT INTO pro_group (
			`GROUP_ID`, 
			`GROUP_NAME`, 
			`USER_ID`
		)
		VALUES (
			#{groupId}, 
			#{groupName}, 
			#{userId}
		)
	</insert>
	
	<select id="getObjectById" resultType="net.chenlin.dp.modules.kdecm.entity.ProGroupEntity">
		SELECT
			`GROUP_ID`, 
			`GROUP_NAME`, 
			`USER_ID`
		FROM
			pro_group
		WHERE
			GROUP_ID = #{groupId}
	</select>
	
	<update id="update">
		UPDATE pro_group
	 	<set>
			<if test="groupName != null">`GROUP_NAME` = #{groupName}, </if>
			<if test="userId != null">`USER_ID` = #{userId}</if>
		</set>
		WHERE
			GROUP_ID = #{groupId}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			pro_group
		WHERE
			GROUP_ID IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<select id="listSysUser" resultType="net.chenlin.dp.modules.sys.entity.SysUserEntity">
		SELECT
			`user_id`, 
			`username`, 
			`user_tr_name`
		FROM
			sys_user
	</select>
	
	<select id="MaxGroupID" resultType="Integer">
		SELECT
			MAX(`group_id`)
		FROM
			pro_group
	</select>
	
	<insert id="addGroup" useGeneratedKeys="true" keyProperty="group_id">
		INSERT INTO pro_group (
			`GROUP_ID`, 
			`GROUP_NAME`, 
			`USER_ID`
		)
		VALUES (
			#{groupId}, 
			#{groupName}, 
			#{userId}
		)
	</insert>
	
	<insert id="addGroupUser" >
		INSERT INTO group_user (
			`GROUP_ID`, 
			`USER_ID`
		)
		VALUES (
			#{groupid}, 
			#{userid}
		)
	</insert>
	
	<select id="listGroupByUserID" resultType="net.chenlin.dp.modules.kdecm.entity.ProGroupEntity">
		SELECT
			`GROUP_ID`,
			`GROUP_NAME`,
			`USER_ID`
		FROM
			pro_group
		WHERE
			GROUP_ID IN
			(
				SELECT
					GROUP_ID
				FROM
					group_user
				WHERE
					USER_ID=(
						SELECT 
							USER_ID
						FROM
							sys_user
						WHERE
							USERNAME=#{username}
					)
			)
	</select>
	
	<delete id="batchRemove_">
		DELETE
		FROM
			group_user
		WHERE
			GROUP_ID IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<update id="ChangeGroupProperty" >
		UPDATE pro_group 
		<set>
			`IFOpenNess` = #{OpenNessProperty}
		</set>
		WHERE
			GROUP_ID = #{groupId}
	</update>
	
	<select id="listGroupSysUser" resultType="net.chenlin.dp.modules.sys.entity.SysUserEntity">
		SELECT
			`username`,
			`identity`,
			`user_id`
		FROM
			sys_user
		WHERE
			user_id IN (
				select 
					user_id
				from 
					group_user
				where
					group_id = #{groupId}
			)
	</select>
	
	<delete id="delGroupUser">
		DELETE
		FROM
			group_user
		WHERE
			group_id = #{groupid}
			AND
			user_id = #{userid}
	</delete>
	
	<update id="ChangeGroupName" >
		UPDATE pro_group 
		<set>
			`GROUP_NAME` = #{groupName}
		</set>
		WHERE
			GROUP_ID = #{groupId}
	</update>
</mapper>