<mapper namespace="net.chenlin.dp.modules.kdecm.dao.ProGroupMapper">
	
	<select id="listForPage" resultType="net.chenlin.dp.modules.kdecm.entity.ProGroupEntity">
		SELECT
			`GROUP_ID`, 
			`GROUP_NAME`, 
			`USER_ID`
		FROM
			pro_group
		ORDER BY
			GROUP_ID ASC
	</select>
	
	<insert id="save">
		INSERT INTO pro_group (
			`GROUP_ID`, 
			`GROUP_NAME`, 
			`USER_ID`
		)
		VALUES (
			#{groupId}, 
			#{groupName}, 
			#{userId}
		)
	</insert>
	
	<select id="getObjectById" resultType="net.chenlin.dp.modules.kdecm.entity.ProGroupEntity">
		SELECT
			`GROUP_ID`, 
			`GROUP_NAME`, 
			`USER_ID`
		FROM
			pro_group
		WHERE
			GROUP_ID = #{groupId}
	</select>
	
	<update id="update">
		UPDATE pro_group
	 	<set>
			<if test="groupName != null">`GROUP_NAME` = #{groupName}, </if>
			<if test="userId != null">`USER_ID` = #{userId}</if>
		</set>
		WHERE
			GROUP_ID = #{groupId}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			pro_group
		WHERE
			GROUP_ID IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<select id="listSysUser" resultType="net.chenlin.dp.modules.sys.entity.SysUserEntity">
		SELECT
			`USER_ID`,
			`USERNAME`
		FROM
			sys_user
	</select>
	
	<select id="MaxGroupID" resultType="Integer">
		SELECT
			MAX(`group_id`)
		FROM
			pro_group
	</select>
	
	<insert id="addGroup" useGeneratedKeys="true" keyProperty="group_id">
		INSERT INTO pro_group (
			`GROUP_ID`, 
			`GROUP_NAME`, 
			`USER_ID`,
			`IFOpenNess`
		)
		VALUES (
			#{groupId}, 
			#{groupName}, 
			#{userId},
			0
		)
	</insert>
	
	<insert id="addGroupUser" >
		INSERT INTO group_user (
			`GROUP_ID`, 
			`USER_ID`
		)
		VALUES (
			#{groupid}, 
			#{userid}
		)
	</insert>
	
	<insert id="openNessProperty" >
		INSERT INTO pro_Group (
			`GROUP_ID`, 
			`USER_ID`
		)
		VALUES (
			#{groupid}, 
			#{userid}
		)
	</insert>
	
	<select id="listGroup" resultType="net.chenlin.dp.modules.sys.entity.ProGroupEntity">
		SELECT
			`GROUP_ID`,
			`GROUP_NAME`	
		FROM
			sys_user
	</select>
</mapper>